@{
    ViewData["Title"] = "Create test account";
}

<h2> @ViewData["Title"] </h2>

<p class="alert alert-info">
    The Hedera account that you can create here comes with 3 test HBARs for you to use on this platform. <br />
    To create it, just press the button: 
    @using(Html.BeginForm(null,null,FormMethod.Get))
    {
        <input type="hidden" name="create" value="create" />
        <input type="submit" value="Create account" class="btn btn-primary" />
    }
</p>

@if(ViewBag.AccountCreated != null && ViewBag.AccountCreated)
{
    <h3>
            Your account was created
        </h3>
    <p class="alert alert-success">
        Account Number: @($"0.0.{ViewBag.Address}")

    </p>
}