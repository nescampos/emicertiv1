@{
    ViewData["Title"] = "Home Page";
}
<br /><br />
<div class="row">
    <div class="col-md-4 col-lg-4 col-sm-4">
        <img src="@Url.Content("~/images/default.png")" alt="EmiCerti" class="img-responsive" style="height:350px;" />
    </div>
    <div class="col-md-7 col-lg-7 col-sm-7">
        <div class="jumbotron">
            <h1>EmiCerti</h1>

            <p class="lead text-justify">
                <b>EmiCerti</b> EmiCerti is a launchpad oriented towards sustainable projects, which can upload their 
                initiatives and sell their tokens to obtain financing for their carbon footprint reduction projects, among others. <br />
                <b>EmiCerti</b> is the <b>Initial Coin Offering for ReFi (Regenerative Finance)</b>.
            </p>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>View projects</h2>
        <p>
            Review sustainable projects and buy their tokens to fund their initiatives
        </p>
        <p><a class="btn btn-primary" href="@Url.Action("Index","Project")">View &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Submit your project</h2>
        <p>Do you have a sustainable project? Upload it to our platform to obtain financing through tokenization.</p>
        <p><a class="btn btn-primary" href="@Url.Action("Create","Project")">Submit your project &raquo;</a></p>
    </div>
    @if(ViewBag.Environment == "test")
    {
        <div class="col-md-4">
            <h2>HBAR Address</h2>
            <p>Create a HBAR address in test network</p>
            <p><a class="btn btn-primary" href="@Url.Action("CreateAccount","Home")">Create account &raquo;</a></p>
        </div>
    }
    
</div>
<br /><br />